<div class="au-o-grid__item au-u-1-2@small">
  <AuCard @textCenter="true" as |c|>
    <c.header @badgeSkin="brand" @badgeIcon="draft">
      <AuHeading @level="3" @skin="4">
        SPARQL Query
      </AuHeading>

    </c.header>
    <c.content>

      <AuTextarea value={{this.query}} {{on "input" this.updateQuery}} />

    </c.content>
    <c.footer>
      <p>
        <button type="button" {{on "click" this.submitQuery}}>Submit</button>
      </p>
    </c.footer>
  </AuCard>
</div>